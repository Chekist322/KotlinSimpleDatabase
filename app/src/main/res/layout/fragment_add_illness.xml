<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/relativeLayout"
    android:paddingBottom="20dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <EditText
        android:id="@+id/date_edit_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adding_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rect_edit_text"
        android:elevation="5dp"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/diag_date"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/illness_name_edit_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/date_edit_text"
        android:layout_below="@+id/date_edit_text"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text"
        android:elevation="5dp"
        android:ems="10"
        android:hint="@string/illness_name"
        android:inputType="textCapWords|textPersonName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/adding_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/new_illness"
        android:textSize="24sp" />

</RelativeLayout>