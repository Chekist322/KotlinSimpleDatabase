<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:elevation="@dimen/cardview_default_elevation" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/illness_date_card_view_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:text="Дата диагностирования:"
                android:textColor="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/illness_date_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/illness_date_card_view_label"
                android:layout_alignBottom="@+id/illness_date_card_view_label"
                android:layout_toEndOf="@+id/illness_date_card_view_label"
                android:text="TextView" />

            <TextView
                android:id="@+id/illness_name_card_view_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/illness_date_card_view_label"
                android:layout_centerVertical="true"
                android:text="Наименование:"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/illness_name_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/illness_name_card_view_label"
                android:layout_marginBottom="4dp"
                android:text="TextView"
                android:textSize="24sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>