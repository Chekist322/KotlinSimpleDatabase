<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="5dp"
    android:elevation="@dimen/cardview_default_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/illness_date_card_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:text="@string/illness_start_date"
            android:textColor="@color/stroke_color" />

        <TextView
            android:id="@+id/illness_date_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/illness_date_card_view_label"
            android:layout_alignBottom="@+id/illness_date_card_view_label"
            android:layout_marginEnd="4dp"
            android:layout_toEndOf="@+id/illness_date_card_view_label"
            android:fadeScrollbars="true"
            android:isScrollContainer="true"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/illness_name_card_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/illness_date_card_view_label"
            android:layout_centerVertical="true"
            android:text="@string/illness_name_dd"
            android:textColor="@color/stroke_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/illness_name_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/illness_name_card_view_label"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
