<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/patient_date_card_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/age_dd"
            android:textColor="@color/stroke_color" />

        <TextView
            android:id="@+id/patient_date_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/patient_date_card_view_label"
            android:layout_alignBottom="@+id/patient_date_card_view_label"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/patient_date_card_view_label"
            android:fadeScrollbars="true"
            android:isScrollContainer="true"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/patient_name_card_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/FIO"
            android:textColor="@color/stroke_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/patient_name_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/patient_name_card_view_label"
            android:layout_alignBottom="@+id/patient_name_card_view_label"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/patient_name_card_view_label"
            android:fadeScrollbars="true"
            android:isScrollContainer="true"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>